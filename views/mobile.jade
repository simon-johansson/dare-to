extends layout

mixin row
  .pure-g
    .pure-u-1-1
      block

mixin alternatives(questionNr, alts)
  .alternatives
    .pure-form
      ul
        each alt, index in alts
          li
            input(id="question-#{questionNr}-#{index}" type='radio', name="question-#{questionNr}" value="#{index}")
            label(for="question-#{questionNr}-#{index}") !{alt}
            .check

mixin text-question(questionNr, text)
  +row
    .question
      //- span.number #{questionNr}
      h2.text!= text
  +row
    block

block content

  .main-screen
    h1 CONTRIBUTE TO THE ARTBOARD

    p.go-to-gif Upload a GIF  <span class="iosIcon"></span>
    p.go-to-text Upload some text  <span class="iosIcon"></span>
    p.go-to-emoji Throw emojis  <span class="iosIcon"></span>

  .upload-gif.hidden
    header
      span.back Back
      span.heading UPLOAD A GIF

    input.giphy-input(type="search" placeholder="...")
    .sorry.hidden
      p.big Sorry no GIF found 😭
      p.small Try only searching for one or two words, like "awesome" or "bleeding edge"
    .send.hidden
      span.iosIcon 
      | Upload GIF
    .sent.hidden
      span.iosIcon 

    .loadingWrapper.loadingColorDark.hidden
      .sk-fading-circle
        .skCircle
        .sk-circle2
        .sk-circle3
        .sk-circle4
        .sk-circle5
        .sk-circle6
        .sk-circle7
        .sk-circle8
        .sk-circle9
        .sk-circle10
        .sk-circle11
        .sk-circle12

  .upload-text.hidden
    header
      span.back Back
      span.heading UPLOAD SOME TEXT

    .description
      p Write one or two words. <br/>Max 10 characters

    .input-wrapper
      span.amount 10
      input.text-input(placeholder="..." maxlength="10")

    .preview
      span

    .send-text.hidden
      span.iosIcon 
      | Upload text

    .sent.hidden
      span.iosIcon 


  .party-mode.noselect.hidden
    header
      span.back Back
      span.heading THROW EMOJIS
    .emoji-picker
      .emoji 🦄
      .emoji 😻
      .emoji 🍾
      .emoji 👊
      .emoji 🤖
      .emoji 🎉
      .emoji 💪
      .emoji 📱
